  <script>
    // Pexels'ten alÄ±nan direkt gÃ¶rsel linkleri
    const flowers = {
      rose: "https://images.pexels.com/photos/30592534/pexels-photo-30592534.jpeg", 
      tulip: "https://images.pexels.com/photos/3854583/pexels-photo-3854583.jpeg",
      magnolia: "https://images.pexels.com/photos/2683363/pexels-photo-2683363.jpeg", 
      orchid: "https://images.pexels.com/photos/34891883/pexels-photo-34891883.jpeg",
      lavender: "https://images.pexels.com/photos/32792440/pexels-photo-32792440.jpeg",
      daisy: "https://images.pexels.com/photos/8541321/pexels-photo-8541321.jpeg"
    };

    let selectedFlower = null;

    function select(flowerKey, emoji) {
      const bouquetDiv = document.getElementById("bouquet");
      const emojiDiv = document.getElementById("emojiPlaceholder");
      const envelopeDiv = document.getElementById("envelopeContainer");
      
      selectedFlower = flowerKey;

      // Ã–nce mevcut durumu temizle
      bouquetDiv.classList.remove("show");
      emojiDiv.classList.remove("show");
      
      // Resmi yÃ¼klemeyi dene
      const img = new Image();
      
      img.onload = function() {
          // BaÅŸarÄ±lÄ± olursa resmi gÃ¶ster
          bouquetDiv.style.backgroundImage = `url('${flowers[flowerKey]}')`;
          // Placeholder emoji'sini gizle
          emojiDiv.style.display = "none"; 
          bouquetDiv.style.display = "block";
          
          setTimeout(() => {
              bouquetDiv.classList.add("show");
          }, 50);
      };
      
      img.onerror = function() {
          // Hata olursa (Resim yÃ¼klenmezse) emoji placeholder gÃ¶ster
          console.error("Resim yÃ¼klenemedi. AÄŸ veya baÄŸlantÄ± sorunu olabilir.");
          bouquetDiv.style.display = "none";
          emojiDiv.innerText = emoji;
          // Placeholder emoji'sini gÃ¶ster (YazÄ±sÄ±z)
          emojiDiv.style.display = "block"; 
          
          setTimeout(() => {
              emojiDiv.classList.add("show");
          }, 50);
      };
      
      // Resmi yÃ¼klemeyi baÅŸlat
      img.src = flowers[flowerKey];

      // ZarfÄ± gÃ¶rÃ¼nÃ¼r yap
      envelopeDiv.classList.add("visible");
    }

    function openLetter() {
      document.getElementById("letterModal").classList.add("visible");
      startHeartRain();
    }

    function closeLetter() {
        document.getElementById("letterModal").classList.remove("visible");
    }

    function startHeartRain() {
      const duration = 5000; 
      const interval = setInterval(createHeart, 150); 
      setTimeout(() => clearInterval(interval), duration);
    }

    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      
      // Kalp ve Ã§iÃ§ek emojilerini rastgele seÃ§
      const emojis = ["â¤ï¸", "ðŸ’–", "ðŸŒ¸", "ðŸŒ¹", "âœ¨"];
      heart.innerHTML = emojis[Math.floor(Math.random() * emojis.length)]; 
      
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = Math.random() * 2 + 4 + "s"; 
      heart.style.fontSize = Math.random() * 25 + 15 + "px"; 
      document.body.appendChild(heart);
      
      setTimeout(() => heart.remove(), 6000);
    }
    
    // Uygulama yÃ¼klendiÄŸinde varsayÄ±lan olarak bir buket gÃ¶ster (GÃ¼l)
    window.onload = () => {
        select('rose', 'ðŸŒ¹');
    };
  </script>
